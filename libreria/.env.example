# Archivo de ejemplo de variables de entorno
# Copia este archivo como .env y configura tus valores

# Configuración de Django
SECRET_KEY=tu-secret-key-aqui
DEBUG=True

# Configuración de Base de Datos MySQL
DB_NAME=crud_python
DB_USER=tu_usuario_mysql
DB_PASSWORD=tu_contraseña_mysql
DB_HOST=localhost
DB_PORT=3306

# Notas:
# - Para SQLite, cambia ENGINE a 'django.db.backends.sqlite3' y DB_NAME a la ruta del archivo
# - Para PostgreSQL, cambia ENGINE a 'django.db.backends.postgresql' y ajusta el puerto a 5432
